<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv='refresh' CONTENT='10'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - checking_v2</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="~/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/fonts/ionicons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.min.css" />
</head>
<body>
    <header>
        <nav id="main-nav-bar" class="navbar navbar-light navbar-expand-md navigation-clean-button">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Checking</a>
                <button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" id="navcol-1">
                    <partial name="_LoginPartial" />
                    <ul class="nav navbar-nav mr-auto" style="color: white;">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link text-light" asp-area="" asp-controller="Solicitudes" asp-action="Index">Solicitudes</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link text-light" asp-area="" asp-controller="Respuestas" asp-action="Index">Respuestas</a>
                        </li>
                        @*<li class="nav-item dropdown">
                        <a class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded="false" href="#">Dropdown </a>
                        <div class="dropdown-menu" role="menu"><a class="dropdown-item" role="presentation" href="#">First Item</a><a class="dropdown-item" role="presentation" href="#">Second Item</a><a class="dropdown-item" role="presentation" href="#">Third Item</a></div>
                    </li>*@
                    </ul>
                </div>
            </div>
        </nav>
        
    </header>
    <div class="container" style="margin-top:2em">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="page-footer">
        <div class="container">
            <div class="links"><a href="#">Sobre el proyecto</a><a href="#">Contáctanos</a></div>
            <div class="social-icons"><a href="#"><i class="icon ion-social-facebook"></i></a><a href="#"><i class="icon ion-social-instagram-outline"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a></div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
